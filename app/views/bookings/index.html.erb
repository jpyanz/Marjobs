<% content_for :header do %>
<% end %>

<% content_for :footer do %>
<% end %>

<div class="bookings-container">
	<nav class="mt-3" aria-label="breadcrumb">
		<ol class="breadcrumb">
			<li class="breadcrumb-item active" aria-current="page">Bookings</li>
		</ol>
	</nav>
	
    <div class="pt-3 pb-2 mb-3 border-bottom d-flex justify-content-between">
        <h1 class="h2 mb-0">Booking</h1>
		<%= link_to icon('fa-solid', 'plus') +" New booking", new_booking_path, class: 'btn btn-success' %>
    </div>

	<p style="color: green"><%= notice %></p>

	<div class="table-responsive">
		<table id="bookings" class="table table-bordered table-hover">
			<thead class="table-dark">
				<tr>
					<th scope="col">#</th>
					<th>Package</th>
					<th>Date</th>
					<th>Name</th>
					<th>Phone</th>
					<th>Email</th>
					<th>Venue</th>
					<th>Addons</th>
					<th></th>
				</tr>
			</thead>
			<tbody class="table-group-divider">
				<% @bookings.each.with_index(1) do | booking, i | %>
					<tr id="<%= dom_id booking %>">
						<th scope="row"><%= i %></th>
						<td><%= booking.package %></td>
						<td><%= booking.date.strftime("%B %d, %Y") %></td>
						<td><%= booking.name %></td>
						<td><%= phone_to booking.phone, "+63"+ booking.phone.to_s %></td>
						<td><%= mail_to booking.email, booking.email %></td>
						<td><%= booking.venue %></td>
						<td>
							<ol>
								<% booking.addons.each do |key, value| %>
									<% if value.to_s != '0' %>
										<li><%= value %></li>
									<% end %>
								<% end %>
							</ol>
						</td>
						<td class="text-center">
							<%= link_to icon('fa-solid', 'eye') +" View", booking, class: 'btn btn-primary btn-sm' %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
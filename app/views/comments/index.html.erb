<% content_for :header do %>
<% end %>

<% content_for :footer do %>
<% end %>

<% if notice.present? %>
	<div class="toast-container position-fixed bottom-0 end-0 p-3">
		<div class="toast align-items-center show text-bg-success" role="alert" aria-live="assertive" aria-atomic="true">
			<div class="d-flex">
				<div class="toast-body">
					<%= notice %>
				</div>
				<button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
			</div>
		</div>
	</div>
<% end %>

<div class="comments-container">
	<nav class="mt-3" aria-label="breadcrumb">
		<ol class="breadcrumb">
			<li class="breadcrumb-item active" aria-current="page">Comments</li>
		</ol>
	</nav>
	
    <div class="pt-3 pb-2 mb-3 border-bottom d-flex justify-content-between">
        <h1 class="h2 mb-0">Comments</h1>
    </div>

	<div class="table-responsive">
		<table id="comments" class="table table-bordered">
			<thead class="table-dark">
				<tr>
					<th scope="col">#</th>
					<th>Name</th>
					<th>Message</th>
					<th>Status</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody class="table-group-divider">
				<% @comments.each.with_index(1) do | comment, i | %>
					<tr id="<%= dom_id comment %>" class="<%= comment.status == 'Done' ? "table-success" : "" %>">
						<th scope="row"><%= i %></th>
						<td><%= comment.name %></td>
						<td><%= comment.body %></td>
						<td><%= comment.status %></td>
						<td class="text-center"><%= link_to icon('fa-solid', 'eye') +" View", gallery_show_path(comment.album_id), class: 'btn btn-primary btn-sm text-decoration-none', target: '_blank' %></td>
						<td>
							<div class="d-flex justify-content-center">
								<%= link_to icon('fa-solid', 'pen-to-square') +" Edit", edit_comment_path(comment), class: 'btn btn-link btn-sm text-decoration-none' %>
								<%= button_to icon('fa-solid', 'trash') +" Delete", comment,
									method: :delete, 
									data: {
										turbo_method: :delete,
										turbo_confirm: "Are you sure?"
									},  
									class: 'btn btn-danger btn-sm' %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<% content_for :header do %>
<% end %>

<% content_for :footer do %>
<% end %>

<% if notice.present? %>
	<div class="toast-container position-fixed bottom-0 end-0 p-3">
		<div class="toast align-items-center show text-bg-success" role="alert" aria-live="assertive" aria-atomic="true">
			<div class="d-flex">
				<div class="toast-body">
					<%= notice %>
				</div>
				<button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
			</div>
		</div>
	</div>
<% end %>

<div class="show-contact-container">
	<nav class="mt-3" aria-label="breadcrumb">
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><%= link_to "Messages", contacts_path %></li>
    		<li class="breadcrumb-item active" aria-current="page">Messages</li>
		</ol>
	</nav>

    <div class="pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">
			<%= link_to icon('fa-solid', 'angle-left'), contacts_path %>
			Message
		</h1>
    </div>

	<div class="table-responsive">
		<table id="contacts" class="table table-bordered table-hover">
			<thead class="table-dark">
				<tr>
					<th>Name</th>
					<th>Phone</th>
					<th>Email</th>
					<th>Message</th>
					<th></th>
				</tr>
			</thead>
			<tbody class="table-group-divider">
				<tr id="<%= dom_id @contact %>">
					<td><%= @contact.name %></td>
					<td><%= phone_to @contact.phone, @contact.phone %></td>
					<td><%= mail_to @contact.email, @contact.email %></td>
					<td><%= @contact.message %></td>
					<td>
						<div class="d-flex justify-content-center">
							<%= link_to icon('fa-solid', 'pen-to-square') +" Edit", edit_contact_path(@contact), class: 'btn btn-link btn-sm text-decoration-none' %>
							<%= button_to icon('fa-solid', 'trash') +" Delete", @contact,
								method: :delete, 
								data: {
									turbo_method: :delete,
									turbo_confirm: "Are you sure?"
								},  
								class: 'btn btn-danger btn-sm' %>
						</div>
					</td>
				</tr>
			</tbody>
		</table>
	</div>

	<%= link_to "Back to messages", contacts_path %>
</div>
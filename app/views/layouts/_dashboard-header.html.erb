<header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow" role="banner">
	<%= link_to "Marjobs", root_url, class: "navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-3" %>
	
	<button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>
  	<input class="form-control form-control-dark w-100 rounded-0 border-0" type="text" placeholder="Search" aria-label="Search">
	<div class="navbar-nav flex-row">
		<%=comment do %>
			<div class="nav-item text-nowrap">
				<%= link_to "Users", users_path, class: 'nav-link px-3' %>
			</div>
			<div class="nav-item text-nowrap">
				<%= link_to "Create", new_user_path, class: 'nav-link px-3' %>
			</div>
			<div class="nav-item text-nowrap">
				<%= link_to "Edit", edit_user_path(@current_user), class: 'nav-link px-3' %>
			</div>
		<% end %>

		<% if logged_in? %>
			<div class="nav-item text-nowrap">
				<%= link_to "Sign out", logout_path, method: :delete, class: 'nav-link px-3' %>
			</div>
		<% else %>
			<div class="nav-item text-nowrap">
				<%= link_to "Sign in", login_path, class: 'nav-link px-3' %>
			</div>
		<% end %>
	</div>
</header>
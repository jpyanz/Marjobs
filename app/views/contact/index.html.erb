<div class="contact-container container-fluid">
    <div class="row justify-content-center">
        <div class="col col-sm-10 col-md-8 col-lg-6">
            <h1 class="display-6 text-center my-5">Contact Us</h1>

            <p><strong>Address</strong></p>
            <address>
                Lorem ipsum dolor sit amet<br />
                consectetur adipiscing elit.<br />
                pellentesque, Vitae mauris.<br />
            </address>

            <p><strong>Phone:</strong> +1234567890</p>

            <p class="mb-5"><strong>E-mail:&nbsp;</strong><a href="mailto:test@test.com">test@test.com</a></p>

            <%= form_with url: '/contact' do |form| %>
                <div class="row g-3 mb-3">
                    <div class="col">
                        <div class="form-floating">
                            <%= form.text_field 'name', class: 'form-control', placeholder: 'Name', required: true %>
                            <%= form.label "name", "Name", class: 'form-label' %>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <%= form.telephone_field 'phone', class: 'form-control', placeholder: 'Phone' %>
                            <%= form.label "phone", "Phone", class: 'form-label' %>
                        </div>
                    </div>
                </div>
                <div class="row row-cols-1">
                    <div class="col mb-3">
                        <div class="form-floating">
                            <%= form.email_field 'email', class: 'form-control', placeholder: 'Email', required: true %>
                            <%= form.label "email", "Email", class: 'form-label' %>
                        </div>
                    </div>
                    <div class="col mb-3">
                        <div class="form-floating">
                            <%= form.text_area 'message', class: 'form-control h-25', rows: '4', placeholder: 'Message' %>
                            <%= form.label "message", "Message", class: 'form-label' %>
                        </div>
                    </div>
                </div>
                <div class="d-grid">
                    <%= form.submit "SEND MESSAGE", class: 'btn btn-primary btn-lg' %>
                </div>
            <% end %>
        </div>
    </div>
</div>
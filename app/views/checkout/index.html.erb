<% content_for :header do %>
<% end %>

<% content_for :footer do %>
<% end %>

<div class="packages-container container-fluid">
    <h1 class="display-6 my-5 text-center">Wedding Packages</h1>

    <div class="row g-4">

        <% @packages.each do |package| %>
            <div class="col">
                <div class="card h-100">
                    <div class="card-header fw-bold text-center py-3"><%= package.name %></div>
                    <div class="card-body">
                        <h2 class="card-title text-center"><%= number_to_currency(package.price.to_f, unit: '₱') %></h2>
                        
                        <%= sanitize package.description, attributes: %w(class style href) %>

                        <p class="fw-bold text-center"><u>FREEBIES</u></p>
                        <%= sanitize package.freebies, attributes: %w(class style href) %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

    <h2 class="display-6 text-center my-5">Add-ons</h2>

    <div class="row mb-5 justify-content-center">
        <div class="col col-sm-8 col-md-6 col-lg-4">
            <ul class="list-group list-group-flush">
                <% @addons.each do |addon| %>
                    <li class="list-group-item bg-transparent d-flex justify-content-between align-items-center"><%= addon.name %> <strong><%= number_to_currency(addon.price.to_f, unit: '₱') %></strong></li>
                <% end %>
            </ul>

            <div class="d-grid mt-5">
                <%= link_to 'BOOK NOW', checkout_new_path, class: 'btn btn-primary btn-lg' %>
            </div>
        </div>
    </div>
</div>
    <h2 class="display-6 text-center mb-4">Add-ons</h2>

    <div class="row mb-5 justify-content-center">
        <div class="col col-sm-8 col-md-6 col-lg-4">
            <ul class="list-group list-group-flush">
                <li class="list-group-item bg-transparent d-flex justify-content-between align-items-center">Photographer <strong>&#8369;5,000.00</strong></li>
                <li class="list-group-item bg-transparent d-flex justify-content-between align-items-center">Videographer <strong>&#8369;5,000.00</strong></li>
                <li class="list-group-item bg-transparent d-flex justify-content-between align-items-center">Same Day Edit Video <strong>&#8369;6,000.00</strong></li>
                <li class="list-group-item bg-transparent d-flex justify-content-between align-items-center">Same Day Edit Photo <strong>&#8369;5,000.00</strong></li>
                <li class="list-group-item bg-transparent d-flex justify-content-between align-items-center">10 Pages Album <strong>&#8369;1,500.00</strong></li>
                <li class="list-group-item bg-transparent d-flex justify-content-between align-items-center">20 Pages Album <strong>&#8369;2,800.00</strong></li>
                <li class="list-group-item bg-transparent d-flex justify-content-between align-items-center">40 Pages Album <strong>&#8369;4,500.00</strong></li>
                <li class="list-group-item bg-transparent d-flex justify-content-between align-items-center">16x20 Frame <strong>&#8369;1,700.00</strong></li>
                <li class="list-group-item bg-transparent d-flex justify-content-between align-items-center">11x14 Frame <strong>&#8369;800.00</strong></li>
            </ul>

            <div class="d-grid mt-5">
                <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#checkoutModal">BOOK NOW</button>
            </div>
        </div>
    </div>

    <section id="checkoutModal" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Checkout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <%= form_with url: '/packages/checkout', id: 'checkout' do |form| %>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3">
                                    <%= form.label "package", class: 'form-label fw-bold' do %>
                                        Package<small class="text-danger">*</small>
                                    <% end %>

                                    <select name="package" id="package" class="form-select" aria-label="Package Select" required>
                                        <option value="" disabled selected>Select your package</option>
                                        <option value="Andromeda">ANDROMEDA</option>
                                        <option value="Aquila">AQUILA</option>
                                        <option value="Casseiopeia">CASSEIOPEIA</option>
                                        <option value="Orion">ORION</option>
                                    </select>                            
                                </div>
                            </div>
                            <div class="col-6">
                                <%= form.label "date", class: 'form-label fw-bold' do %>
                                    Date<small class="text-danger">*</small>
                                <% end %>
                                <%= form.date_field 'date', class: 'form-control', required: true %>
                            </div>
                        </div>
                        <div class="mb-3">
                            <%= form.label "name", class: 'form-label fw-bold' do %>
                                Name<small class="text-danger">*</small>
                            <% end %>
                            <%= form.text_field 'name', class: 'form-control', required: true %>
                        </div>
                        <div class="mb-3">
                            <%= form.label "phone", class: 'form-label fw-bold' do %>
                                Phone<small class="text-danger">*</small>
                            <% end %>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="phone">+63</span>
                                <input type="number" name="phone" class="form-control" min="0" onKeyPress="if(this.value.length==10) return false;" placeholder="Phone" aria-label="phone" aria-describedby="phone" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <%= form.label "email", class: 'form-label fw-bold' do %>
                                Email<small class="text-danger">*</small>
                            <% end %>
                            <%= form.email_field 'email', class: 'form-control', required: true %>
                        </div>
                        <div class="mb-3">
                            <%= form.label "venue", class: 'form-label fw-bold' do %>
                                Venue<small class="text-danger">*</small>
                            <% end %>
                            <%= form.text_area 'venue', class: 'form-control', rows: '3', placeholder: 'Venue address', required: true %>
                        </div>
                        <div class="mb-3">
                            <p class="form-label fw-bold">Add-ons</p>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-check">
                                    <%= form.check_box 'addon1', {:class => "form-check-input"}, "10 Pages Album" %>
                                    <%= form.label 'addon1', "10 Pages Album", class: 'form-check-label' %>
                                </div>
                                <div class="form-check">
                                    <%= form.check_box 'addon2', {:class => "form-check-input"}, "20 Pages Album" %>
                                    <%= form.label 'addon2', "20 Pages Album", class: 'form-check-label' %>
                                </div>
                                <div class="form-check">
                                    <%= form.check_box 'addon3', {:class => "form-check-input"}, "40 Pages Album" %>
                                    <%= form.label 'addon3', "40 Pages Album", class: 'form-check-label' %>
                                </div>
                                <div class="form-check">
                                    <%= form.check_box 'addon4', {:class => "form-check-input"}, "16x20 Frame" %>
                                    <%= form.label 'addon4', "16x20 Frame", class: 'form-check-label' %>
                                </div>
                                <div class="form-check">
                                    <%= form.check_box 'addon5', {:class => "form-check-input"}, "11x14 Frame" %>
                                    <%= form.label 'addon5', "11x14 Frame", class: 'form-check-label' %>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-check">
                                    <%= form.check_box 'addon6', {:class => "form-check-input"}, "Photographer" %>
                                    <%= form.label 'addon6', "Photographer", class: 'form-check-label' %>
                                </div>
                                <div class="form-check">
                                    <%= form.check_box 'addon7', {:class => "form-check-input"}, "Videographer" %>
                                    <%= form.label 'addon7', "Videographer", class: 'form-check-label' %>
                                </div>
                                <div class="form-check">
                                    <%= form.check_box 'addon8', {:class => "form-check-input"}, "Same Day Edit Video" %>
                                    <%= form.label 'addon8', "Same Day Edit Video", class: 'form-check-label' %>
                                </div>
                                <div class="form-check">
                                    <%= form.check_box 'addon9', {:class => "form-check-input"}, "Same Day Edit Photo" %>
                                    <%= form.label 'addon9', "Same Day Edit Photo", class: 'form-check-label' %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" id="submit" form="checkout" class="btn btn-primary"><%= icon('fa-solid', 'cart-shopping') %> Order</button>
                </div>
            </div>
        </div>
    </section>
</div>
<div class="login-container">
    <div class="form-signin w-100 m-auto">
        <a href="/" class="logo">Marjobs</a>

        <% if flash[:notice] %>
            <div class="alert alert-success alert-dismissible text-center fade show" role="alert">
                <strong><%= flash[:notice] %></strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% end %>

        <%= form_tag '/login' do %>
            <div class="form-floating">
                <%= text_field_tag :username, "", class: 'form-control', placeholder: :username %>
                <%= label_tag :username %>
            </div>
            <div class="form-floating">
                <%= password_field_tag :password, "", class: 'form-control', placeholder: :password, autocomplete: "on" %>
                <%= label_tag :password %>
            </div>

            <%= submit_tag "Sign in", class: 'w-100 btn btn-lg btn-primary' %>
        <% end %>

        <p class="mt-3">Forgot <a href="#" class="blue-text">Password?</a></p>
    </div>
</div>